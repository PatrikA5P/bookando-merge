# Bookando Environment Configuration
# Copy this file to .env and configure for your environment
# IMPORTANT: Never commit .env to version control!

# ===========================================
# Application Environment
# ===========================================
APP_ENV=production
# Options: production, staging, development, local

# ===========================================
# Database Configuration
# ===========================================
# Typically configured in wp-config.php, but can be overridden here
# DB_NAME=bookando_db
# DB_USER=bookando_user
# DB_PASSWORD=your_secure_password
# DB_HOST=localhost
# DB_CHARSET=utf8mb4

# ===========================================
# Security & Secrets
# ===========================================

# JWT Secret (for API authentication)
# Generate with: openssl rand -base64 32
# JWT_SECRET=

# OAuth Client Credentials (Google Calendar)
# BOOKANDO_GOOGLE_CLIENT_ID=
# BOOKANDO_GOOGLE_CLIENT_SECRET=

# OAuth Client Credentials (Microsoft Calendar)
# BOOKANDO_MS_CLIENT_ID=
# BOOKANDO_MS_CLIENT_SECRET=

# ===========================================
# Feature Flags
# ===========================================

# Enable development mode (bypasses some security checks)
BOOKANDO_DEV=false

# Sync WordPress users with Bookando users
BOOKANDO_SYNC_USERS=true

# ===========================================
# Performance & Caching
# ===========================================

# Redis cache (if available)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0

# Object cache enabled
# OBJECT_CACHE_ENABLED=true

# ===========================================
# External Services
# ===========================================

# Email service (if using external SMTP)
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@bookando.com
# MAIL_FROM_NAME=Bookando

# Sentry error tracking
# SENTRY_DSN=

# ===========================================
# Storage & CDN
# ===========================================

# S3-compatible storage (for file uploads)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=eu-central-1
# AWS_BUCKET=bookando-uploads
# AWS_URL=https://your-bucket.s3.amazonaws.com

# CDN URL for assets
# CDN_URL=https://cdn.yourdomain.com

# ===========================================
# Rate Limiting
# ===========================================

# Customize rate limits (requests per minute)
# RATE_LIMIT_READ=100
# RATE_LIMIT_WRITE=30
# RATE_LIMIT_AUTH=10

# ===========================================
# Logging & Monitoring
# ===========================================

# Log level: debug, info, warning, error
LOG_LEVEL=warning

# Send logs to external service
# LOG_CHANNEL=stack
# LOG_SLACK_WEBHOOK_URL=

# ===========================================
# Development Only
# ===========================================

# Debug mode (shows detailed errors)
# WP_DEBUG=false
# WP_DEBUG_LOG=true
# WP_DEBUG_DISPLAY=false

# Disable DevBypass even in dev environment (emergency kill switch)
# BOOKANDO_DISABLE_DEV_BYPASS=false
